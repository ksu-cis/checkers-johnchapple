@page
@model IndexModel
@{
    ViewData["Title"] = "Checkers";
}

<h1>Checkers</h1>

<svg width="800" height="800">
    @for (int y = 0; y < 8; y++)
    {
        @for(int x = 0; x < 8; x++)
        {
            <rect x="@(x*100)" y="@(y*100)" fill="@((x+y)%2==0?"red":"black")" width="100" height="100"/>
            @if(Model.Game.Board[x,y] != null)
            {
                <circle cx="@(x*100+50)"
                        cy="@(y*100+50)"
                        r="40"
                        fill="@Model.Game.Board[x,y].Color"
                        stroke="gray"/>
                        
            }
        }
    }
</svg>